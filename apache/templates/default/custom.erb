<% if @port !=80 -%>
  listen <%= @port %>
<% end -%>

<VirtualHost *:<%= @port %>>
  ServerAdmin webmaster@localhost
 
  DocumentRoot <%= @document_root %>
  <Directory />
     Options FollowSymlinks
     AllowOverride None
   </Directory>
   <Directory <%= @document_root %>>
    Options Indexes FollowSymlinks MultiViews
    AllowOverride None
    Order allow,deny
    Deny from all
    Allow from 127.0.0.0/255.0.0.0 ::1/128
   </Directory>
 </VirtualHost>